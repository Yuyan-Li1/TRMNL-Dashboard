{
	"$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
	"files": {
		"includes": ["**", "!**/.next", "!**/node_modules", "!**/.claude"]
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noDocumentCookie": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true
	}
}
